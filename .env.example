# LLM Configuration - Updated for Gemma 3
OLLAMA_MODEL=gemma3:4b
MODEL_N_CTX=8192
MODEL_N_GPU_LAYERS=0
TEMPERATURE=0.1
MAX_TOKENS=2048
TOP_P=0.9

# Vector Database
CHROMA_PERSIST_DIRECTORY=./data/vectordb
COLLECTION_NAME=documenter

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Sources
LANGCHAIN_DOCS_URL=https://python.langchain.com/docs/
FASTAPI_DOCS_URL=https://fastapi.tiangolo.com/

# API Keys (if using external services)
GEMINI_API_KEY= 

# Monitoring
LOG_LEVEL=INFO
ENABLE_MONITORING=true
